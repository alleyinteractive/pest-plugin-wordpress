{
  "name": "alleyinteractive/pest-plugin-wordpress",
  "description": "WordPress Pest Integration",
  "keywords": [
    "php",
    "framework",
    "pest",
    "unit",
    "test",
    "testing",
    "plugin",
    "wordpress"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "mantle-framework/testkit": "^0.12.x-dev",
    "pestphp/pest-plugin": "^2.0.1",
    "pestphp/pest": "^2.12.1",
    "symfony/var-dumper": "^6.3.3"
  },
  "require-dev": {
    "pestphp/pest-dev-tools": "^2.14.0"
  },
  "autoload": {
    "psr-4": {
      "Pest\\PestPluginWordPress\\": "src/"
    },
    "files": [
      "src/Autoload.php"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.x-dev"
    },
    "mantle": {
      "aliases": [],
      "providers": [
        "Pest\\PestPluginWordPress\\ServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "alleyinteractive/composer-wordpress-autoloader": true
    }
  },
  "scripts": {
    "lint": "php-cs-fixer fix -v",
    "test:lint": "php-cs-fixer fix -v --dry-run",
    "phpstan": "phpstan analyse --ansi",
    "phpunit": "pest --colors=always",
    "test": [
      "lint",
      "phpstan",
      "phpunit"
    ]
  }
}
